	document.getElementById('post-menu').innerHTML= '<li><a href="#" onclick="document.getElementById(\'post-option\').innerHTML=\' Public \';document.getElementById(\'target\').value=\'Public\';">Δημόσιο</a></li>';
	document.getElementById('post-menu').innerHTML+= '<li><a href="#" onclick="document.getElementById(\'post-option\').innerHTML=\' Private \';document.getElementById(\'target\').value=\'Private\';">Ιδιωτικό</a></li>';
